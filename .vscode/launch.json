  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "attachSimplePort": 9229,
      "program": "index.ts",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "--allow-read",
        "--allow-net",
        "-A"
      ],
      "env": {
        "PORT": "3000"
      }
    }
  ]
}
